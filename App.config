<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    </configSections>

    <log4net>
        <!-- Конфигурация для консоли с цветным выводом -->
        <appender name="ColoredConsoleAppender" type="LoggerNs.ColoredConsoleAppender">
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="[%date{HH:mm:ss.fff}] [%level] %message%newline" />
            </layout>
            <filter type="log4net.Filter.LevelRangeFilter">
                <levelMin value="INFO" />
                <levelMax value="FATAL" />
            </filter>
        </appender>

        <!-- Конфигурация для файла логов -->
        <appender name="FileAppender" type="log4net.Appender.FileAppender">
            <file value="app.log" />
            <appendToFile value="true" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="[%date{yyyy-MM-dd HH:mm:ss}] [%level] %message%newline" />
            </layout>
            <filter type="log4net.Filter.LevelRangeFilter">
                <levelMin value="INFO" />
                <levelMax value="FATAL" />
            </filter>
        </appender>

        <!-- Корневой логгер -->
        <root>
            <level value="INFO" />
            <appender-ref ref="ColoredConsoleAppender" />
            <appender-ref ref="FileAppender" />
        </root>
    </log4net>

    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
</configuration>